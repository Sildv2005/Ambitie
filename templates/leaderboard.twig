<!DOCTYPE html>
<html lang="en">
<head>
    {% include '../partials/head.twig' %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-color: white;
        }

        .table {
            margin-left: auto;
            margin-right: auto;
            width: 50%;
            background: white;
            border-radius: 12px;
            overflow-x: auto;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        h2,
        label {
            padding-top: 20px;
        }


        .pagination a.btn,
        .pagination .current-page {
            margin: 4px;
            padding: 6px 12px;
            border-radius: 4px;
        }

        .pagination .current-page {
            background: #bbb;
            font-weight: bold;
        }

        .table h3 {
            color: black;
        }

        table {
            width: 95%;
            border-collapse: collapse;
            background-color: #444444;
            margin-top: 20px;
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 30px;
        }

        th,
        td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #888;
        }

        .btn {
            display: inline-block;
            padding: 0.5em 1em;
            border-radius: 4px;
            font-weight: bold;
            cursor: pointer;
            background: white;
            border: 1px solid #333;
            color: black;
            border-radius: 6px;
        }

        .btn:hover {
            background-color: #888;
        }


        .padding-left {
            padding-left: 20px;
        }

        .white {
            color: white;
        }

        .text-center {
            text-align: center;
        }

        footer {
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div>
        <h2 class="padding-left text-center">Leaderboard</h2>

        <form method="get" class="padding-left text-center">
            <label class="padding-left">Filter by Player Name:</label>
            <input type="text" name="filter" value="{{ filter|e }}">
            <input type="submit" value="Apply Filter">
        </form>

        <div class="table white">
            {% if query_result is defined %}
                <h3 class="text-center">Results:</h3>
                <table>
                    <tr>
                        {% if session.user_logged_in %}
                            <th>Action</th>
                        {% endif %}
                        {% for column in query_result.columns %}
                            {% if column != 'id' or session.user_logged_in %}
                                <th>{{ column }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                    {% for row in query_result.rows %}
                        <tr>
                            {% if session.user_logged_in %}
                                <td>
                                    <form method="post" action="/">
                                        <input type="hidden" name="player_id" value="{{ row.id }}">
                                        <input type="submit" name="remove_time" value="Remove time">
                                    </form>
                                </td>
                            {% endif %}
                            {% for key, value in row %}
                                {% if key != 'id' or session.user_logged_in %}
                                    <td>{{ value }}</td>
                                {% endif %}
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </table>
            </div>

                {% if pagination.total_pages > 1 %}
                    <div class="pagination text-center">
                        {% set base_url = "?filter=" ~ filter %}

                        {% if pagination.page > 1 %}
                            <a href="{{ base_url ~ '&page=' ~ (pagination.page - 1) }}" class="btn">Previous</a>
                        {% endif %}

                        {% for p in 1..pagination.total_pages %}
                            {% if p == pagination.page %}
                                <span class="current-page">{{ p }}</span>
                            {% else %}
                                <a href="{{ base_url ~ '&page=' ~ p }}" class="btn">{{ p }}</a>
                            {% endif %}
                        {% endfor %}

                        {% if pagination.page < pagination.total_pages %}
                            <a href="{{ base_url ~ '&page=' ~ (pagination.page + 1) }}" class="btn">Next</a>
                        {% endif %}
                    </div>
                {% endif %}
            {% else %}
                <p>No results found.</p>
            {% endif %}
        </div>

        <footer class="padding-left text-center">
            {% if session.user_logged_in %}
                <p><a href="/?logout" class="btn">Logout</a></p>
            {% else %}
                <p><a href="login.php" class="btn">Login</a></p>
            {% endif %}
        </footer>
    </div>
</body>
</html>
