<!DOCTYPE html>
<html lang="en">
<head>
    {% include '../partials/head.twig' %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-color: white;
        }

        input[type="text"], input[type="submit"] {
            padding: 8px;
            margin: 5px;
            font-size: 16px;
        }

        .pagination {
            flex-wrap: wrap;
        }

        .pagination a.btn,
        .pagination .current-page {
            margin: 4px;
            padding: 6px 12px;
            background: #ddd;
            border-radius: 4px;
            text-decoration: none;
            color: black;
            display: inline-block;
        }

        .pagination .current-page {
            background: #bbb;
            font-weight: bold;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            table, thead, tbody, th, td, tr {
                display: block;
            }

            thead {
                display: none;
            }

            tr {
                margin-bottom: 15px;
                border: 1px solid #ddd;
                border-radius: 6px;
                padding: 10px;
            }

            td {
                position: relative;
                padding-left: 50%;
            }

            td::before {
                content: attr(data-label);
                position: absolute;
                left: 10px;
                top: 10px;
                font-weight: bold;
                white-space: nowrap;
            }

        }
        .table h3 {
            color: black;
        }
    </style>
</head>
<body>
    <img src="/background.png" class="background-img" />
    <div class="white">
        <h2 class="padding-left white text-center">Leaderboard</h2>

        <form method="get" class="padding-left text-center">
            <label class="padding-left white">Filter by Player Name:</label>
            <input type="text" name="filter" value="{{ filter|e }}">
            <input type="submit" value="Apply Filter">
        </form>

        <div class="table">
            {% if query_result is defined %}
                <h3 class="text-center">Results:</h3>
                <table>
                    <tr>
                        {% if session.user_logged_in %}
                            <th>Action</th>
                        {% endif %}
                        {% for column in query_result.columns %}
                            {% if column != 'id' or session.user_logged_in %}
                                <th>{{ column }}</th>
                            {% endif %}
                        {% endfor %}
                    </tr>
                    {% for row in query_result.rows %}
                        <tr>
                            {% if session.user_logged_in %}
                                <td>
                                    <form method="post" action="/">
                                        <input type="hidden" name="player_id" value="{{ row.id }}">
                                        <input type="submit" name="remove_time" value="Remove time">
                                    </form>
                                </td>
                            {% endif %}
                            {% for key, value in row %}
                                {% if key != 'id' or session.user_logged_in %}
                                    <td>{{ value }}</td>
                                {% endif %}
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </table>
            </div>

                {% if pagination.total_pages > 1 %}
                    <div class="pagination text-center">
                        {% set base_url = "?filter=" ~ filter %}

                        {% if pagination.page > 1 %}
                            <a href="{{ base_url ~ '&page=' ~ (pagination.page - 1) }}" class="btn">Previous</a>
                        {% endif %}

                        {% for p in 1..pagination.total_pages %}
                            {% if p == pagination.page %}
                                <span class="current-page">{{ p }}</span>
                            {% else %}
                                <a href="{{ base_url ~ '&page=' ~ p }}" class="btn">{{ p }}</a>
                            {% endif %}
                        {% endfor %}

                        {% if pagination.page < pagination.total_pages %}
                            <a href="{{ base_url ~ '&page=' ~ (pagination.page + 1) }}" class="btn">Next</a>
                        {% endif %}
                    </div>
                {% endif %}
            {% else %}
                <p>No results found.</p>
            {% endif %}
        </div>

        <footer class="padding-left text-center">
            {% if session.user_logged_in %}
                <p><a href="/?logout" class="btn">Logout</a></p>
            {% else %}
                <p><a href="login.php" class="btn">Login</a></p>
            {% endif %}
        </footer>
    </div>
</body>
</html>
